{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "bracketSpacing": false,
      "singleQuote": true,
      "trailingComma": "none"
    }],
    "camelcase": 2,
    "no-cond-assign": 0,
    "no-else-return": 2,
    "no-eval": 2,
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "^_"
    }],
    "no-var": 2,
    "prefer-const": 2
  }
}
